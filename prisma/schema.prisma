generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id        String   @id
  email     String   @unique
  username  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  challenges Challenge[]
  notificationsReceived Notification[] @relation("Recipient")
  notificationsTriggered Notification[] @relation("Actor")
}

model Puzzle {
  id                String   @id @default(uuid())
  createdByUserId   String?
  secretCode        String[] // Stored as a string array
  createdAt         DateTime @default(now())
  games             Game[]
}

model Game {
  id             String    @id @default(uuid())
  puzzleId       String
  puzzle         Puzzle @relation(fields: [puzzleId], references: [id])
  playerUserId   String?
  status         String    @default("PLAYING") // PLAYING, WON, LOST
  completedAt    DateTime?
  attempts       Attempt[]
  createdAt      DateTime  @default(now())
  challengeId    String?
  challenge      Challenge? @relation(fields: [challengeId], references: [id])
  notification Notification[]
}

model Attempt {
  id           String   @id @default(uuid())
  gameId       String
  game         Game     @relation(fields: [gameId], references: [id])
  submissionId String   @unique // For idempotency
  guess        String[]
  result       String[]
  createdAt    DateTime @default(now())
}
enum ChallengeType {
  GHOST
  CREATOR
}
model Challenge {
  id              String        @id @default(uuid())
  challengerId    String
  challenger      Profile       @relation(fields: [challengerId], references: [id])
  type            ChallengeType  
  config          Json         
  createdAt       DateTime      @default(now())
  games           Game[]
  notification Notification[]
}

enum NotificationType {
  CHALLENGE_ACCEPTED
  CHALLENGE_COMPLETED
  SYSTEM
}

model Notification {
  id          String           @id @default(uuid())
  recipientId String          
  actorId     String?          
  
  type        NotificationType
  
  challengeId String?
  gameId      String?
  
  metadata    Json?            
  
  readAt      DateTime?        
  createdAt   DateTime         @default(now())

  // Relaciones
  recipient   Profile          @relation("Recipient", fields: [recipientId], references: [id], onDelete: Cascade)
  actor       Profile?         @relation("Actor", fields: [actorId], references: [id], onDelete: Cascade)
  challenge   Challenge?       @relation(fields: [challengeId], references: [id], onDelete: SetNull)
  game        Game?            @relation(fields: [gameId], references: [id], onDelete: SetNull)

  @@index([recipientId, readAt])
}
