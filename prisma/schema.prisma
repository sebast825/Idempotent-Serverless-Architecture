generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id        String   @id
  email     String   @unique
  username  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Puzzle {
  id                String   @id @default(uuid())
  createdByUserId   String?
  secretCode        String[] // Stored as a string array
  createdAt         DateTime @default(now())
  games             Game[]
}

model Game {
  id             String    @id @default(uuid())
  puzzleId       String
  puzzle         Puzzle @relation(fields: [puzzleId], references: [id])
  playerUserId   String?
  status         String    @default("PLAYING") // PLAYING, WON, LOST
  completedAt    DateTime?
  attempts       Attempt[]
  createdAt      DateTime  @default(now())
  challengeId    String?
  challenge      Challenge? @relation(fields: [challengeId], references: [id])
}

model Attempt {
  id           String   @id @default(uuid())
  gameId       String
  game         Game     @relation(fields: [gameId], references: [id])
  submissionId String   @unique // For idempotency
  guess        String[]
  result       String[]
  createdAt    DateTime @default(now())
}
enum ChallengeType {
  GHOST
  CREATOR
}
model Challenge {
  id              String        @id @default(uuid())
  challengerId    String
  type            ChallengeType  
  config          Json         
  createdAt       DateTime      @default(now())
  games           Game[]
}